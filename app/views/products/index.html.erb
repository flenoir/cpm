<div class="container-fluid">

<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-responsive table-striped table-hover">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Project</th>
      <th>Type</th>
      <th>Version</th>
      <th>Functionality</th>
      <th>PO</th>
      <th>SO</th>
      <th>Hasp</th>
      <th>RMA</th>
      <th>Entitlment ID</th>
      <th>Host</th>
      <th>Description</th>
      <th>SLA Number</th>
      <th>SLA date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= Customer.find_by_id(product.customer_id).name %></td>
        <td><%= product.project %></td>
        <td><%= product.producttype %></td>
        <td><%= product.version %></td>
        <td><%= product.functionnality %></td>
        <td><%= product.PO %></td>
        <td><%= product.SO %></td>
        <td><%= product.HASP %></td>
        <td><%= product.RMA %></td>
        <td><%= product.entitlment %></td>
        <td><%= product.host %></td>
        <td><%= product.description %></td>
        <td><%= product.slanumber %></td>
        <td><%= product.sladate %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>

</div>